---
import Footer from "@/partials/Footer.astro";
import Header from "@/partials/Header.astro";
import "../styles/global.css";

interface Props {
	title: string;
}

const { title }: Props = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative bg-slate-900 text-white px-10 py-3 font-monts">
		<div
			class="absolute inset-0 bg-gradient-to-br from-purple-400 via-teal-100 to-pink-500 opacity-60 animate-pulse blur-2xl dark:from-[#2C3E50] dark:to-[#000000] dark:via-white/30"
		>
		</div>
		<div
			class="absolute inset-0 bg-gradient-to-tr from-purple-400 via-pink-400 to-cyan-300 opacity-50 blur-3xl dark:from-transparent dark:to-transparent dar:via-transparent animate-pulse"
		>
		</div>

		<div class="relative flex flex-col max-w-5xl mx-auto min-h-screen">
			<Header />
			<main class="py-4 space-y-3 flex-grow">
				<slot />
			</main>
			<Footer />
		</div>
		<script>
			let previosTitle = document.title;

			window.addEventListener("blur", () => {
				previosTitle = document.title;
				document.title = "No te vayas ðŸ¥ºðŸ’”";
			});

			window.addEventListener("focus", () => {
				document.title = previosTitle;
			});
		</script>
	</body>
</html>

<style is:global>
	html,
	body {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
		height: 100dvh;
		margin: 0;
		padding: 0;
	}
</style>
