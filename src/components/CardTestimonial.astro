---
const { bg, content, picture, name, link_social } = Astro.props;
---

<div class="relative">
    <div
        class="bg-gray-800/20 backdrop-blur-2xl inset-0 bottom-3 absolute rounded-lg -left-3 -top-3 right-3"
    >
    </div>
    <div
        class={`${bg} backdrop-blur-2xl p-6 rounded-lg space-y-4 text-sm sm:text-base`}
    >
        <p class="font-light italic">
            {content}
        </p>
        <div class="flex items-center space-x-4">
            <img
                loading="lazy"
                src={picture}
                alt="User Picture"
                class="w-12 h-12 object-cover rounded-full"
            />
            <div>
                <p class="font-semibold">{name}</p>
                <a href={link_social} class="text-cyan-200">{link_social}</a>
            </div>
        </div>
    </div>
</div>
