---
import type { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import Aboutimg4 from "@/assets/about_img_4.webp";
import Aboutimg2 from "@/assets/img_about.webp";

const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
    currentLang as keyof typeof languageList,
);
---

<section class="h-auto pt-10" id={translateLabels("nav.about.href")}>
    <div
        class="grid grid-cols-2 sm:grid-cols-5 grid-rows-5 sm:grid-rows-8 gap-2 sm:gap-4 h-full"
    >
        <!-- mensaje principal mobile -->
        <div
            class="rounded-lg col-span-2 row-span-2 sm:col-span-2 sm:row-span-8 bg-gradient-to-br from-purple-900 to-fuchsia-900 content-center text-white px-8 py-5 font-mont text-lg sm:text-lg md:text-lg lg:text-xl xl:text-xl 2xl:text-4xl font-medium text-pretty"
        >
            "{translateLabels("about.content_1")}"
        </div>

        <div
            class="rounded-lg col-span-1 row-span-2 sm:row-span-6 sm:col-start-3 sm:row-start-3 bg-fuchsia-700 overflow-hidden"
        >
            <div class="w-full h-full relative">
                <img
                    loading="lazy"
                    src={Aboutimg2.src}
                    alt="Mujer liderando proyecto tech"
                    class="w-full h-full object-cover"
                />
                <div
                    class="absolute inset-0 items-end flex bg-gradient-to-t from-black/90 to-transparent p-4"
                >
                    <p
                        class="text-white text-base sm:text-sm md:text-sm lg:text-sm xl:text-sm 2xl:text-xl"
                    >
                        {translateLabels("about.content_2")}
                    </p>
                </div>
            </div>
        </div>

        <div
            class="rounded-lg row-start-5 row-span-1 col-span-2 sm:col-span-2 sm:row-span-4 sm:col-start-4 sm:row-start-1 bg-gradient-to-b from-indigo-600 to-purple-700 flex flex-col items-center justify-center text-white p-2 sm:p-4 space-y-2"
        >
            <span class="text-3xl sm:text-5xl font-bold text-center">30%</span>
            <p
                class="text-center text-base sm:text-sm md:text-sm lg:text-sm xl:text-sm 2xl:text-xl"
            >
                {translateLabels("about.content_3")}
            </p>
        </div>

        <div
            class="rounded-lg hidden sm:col-span-1 sm:row-span-2 sm:col-start-3 sm:row-start-1 bg-gradient-to-r from-pink-500 to-rose-500 sm:flex items-center justify-center text-white p-4"
        >
            <div class="text-center">
                <span class="text-2xl">👩‍💻</span>
                <p
                    class="text-base sm:text-sm md:text-sm lg:text-sm xl:text-sm 2xl:text-lg mt-2 bg-pink-400/60 px-1 rounded-md"
                >
                    {translateLabels("about.content_4")}
                </p>
            </div>
        </div>

        <div
            class="rounded-lg col-span-1 row-span-2 row-start-3 col-start-2 sm:col-span-2 sm:row-span-4 sm:col-start-4 sm:row-start-5 overflow-hidden relative"
        >
            <div class="w-full h-full relative">
                <img
                    loading="lazy"
                    src={Aboutimg4.src}
                    alt="Mujeres colaborando en proyecto"
                    class="w-full h-full object-cover"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-purple-900/80 to-transparent flex items-end p-4"
                >
                    <p
                        class="text-white text-base sm:text-sm md:text-sm lg:text-sm xl:text-sm 2xl:text-xl"
                    >
                        {translateLabels("about.content_5")}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
